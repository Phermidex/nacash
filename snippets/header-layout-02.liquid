{% if section.settings.enable_header_topbar %}
<div class="header-topbar {% if  section.settings.enable_header_fullwidth  %}full-width {%endif %}">
  {% unless section.settings.enable_header_fullwidth %}
  <div class="container">
    {% endunless  %}
    <div class="row">

      <div class="col-md-4 hidden-sm hidden-xs text-left">
        {{ section.settings.header_topbar_left}}
      </div>

      <div class="col-md-4 hidden-sm hidden-xs text-center">
        {{ section.settings.header_topbar_center}}
      </div>

      <div class="col-md-4 col-sm-12 col-sx-12 text-right topbar-right">
        <div class="text-topbar-right link-topbar">
          {%- assign topbarmenu = section.settings.header_topbar_menu -%}
          {% for link in linklists[topbarmenu].links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </div>
        {% if section.settings.show_header_currency %}
        {% include 'new-currency-top' %}
        {% endif %}
        {% if section.settings.show_header_language %}
        <div class="header-top-currency" >
          <div class="language-currency ">
          </div>
        </div>
        {% endif %}
      </div>
    </div>
    {% unless section.settings.enable_header_fullwidth %}
  </div>
  {% endunless  %}
</div>
{% endif %}
<div id="header-content">
  <div class="header header-center{% if  section.settings.enable_header_fullwidth  %} full-width{%endif %}">
    {% unless section.settings.enable_header_fullwidth %}
    <div class="container">
      {% endunless  %}
      <div class="header-inner">
        <div class="row">
          <div class="col-md-6 col-sm-12 col-12 logo-container">
            {% if template.name == 'index' %}
            <span class="logo">
              {% else %}
              <div class="logo">
                {% endif %}
                <a href="/">
                  {% if section.settings.enable_header_logosvg %}
                  {% if section.settings.header_logo_svg  != blank %}
                  <span style="height:{{ section.settings.logo_height_a }}px; width:auto;">
                    {{ section.settings.header_logo_svg }}
                  </span>
                  {% else %}
                  <img class="" src="{{ 'chaos-logo.svg' | asset_url }}" style="height:{{ section.settings.logo_height_a }}px; width:auto;" />
                  {% endif %}
                  {% else %}
                  <img src="{{ section.settings.logo | img_url: '2048x' }}" alt="{{ shop.name }}" style="height:{{ section.settings.logo_height_a }}px; width:auto;"/>
                  {% endif %}
                </a>
                {% if template.name == 'index' %}
                </span>
              {% else %}
              </div>
            {% endif %}
            <div class="logo-sticky">
              <a href="/">
                {% if section.settings.enable_header_logotickysvg %}
                {% if section.settings.header_logo_tickysvg  != blank %}
                <span style="height:{{ section.settings.logo_height_a }}px; width:auto;">
                  {{ section.settings.header_logo_tickysvg }}
                </span>
                {% else %}
                <img class="" src="{{ 'chaos-logo.svg' | asset_url }}" style="height:{{ section.settings.logo_height_a }}px; width:auto;" />
                {% endif %}
                {% else %}

                <img src="{{ section.settings.logo_sticky | img_url: '2048x' }}" alt="{{ shop.name }}" style="height:{{ section.settings.logo_sticky_height_a }}px; width:auto"/>
                {% endif %}
              </a>
            </div>
          </div>

          <div class="header-cart-container menu col-md-6 col-sm-12 col-12"> 
            {% if section.settings.show_header_search %}
            <div class="search-top-container">
              <div id="search-top">
                <div class="icon-search"><i class="cs-font clever-icon-search-4"> </i></div>
              </div>
            </div>
            {% endif %}
            {% if section.settings.show_header_account %}
            <div class="top-currency">
              <span class="dropdown-icon">
                <i class="cs-font clever-icon-user-6"></i>
              </span>
              <div class="top-bar-dropdown">
                <div class="cusstom-link">
                  {% if customer %}
                  <ul class="customer-links">
                    {% if settings.enable_wishlist %}
                    <li class="wishlist-menu">
                      <i class="icon_heart" aria-hidden="true"></i>
                      <a href="/pages/wish-list" title="My Wishlist">{{ 'header.custom_link_wishlist' | t }}</a>
                    </li>
                    {% endif %}
                    <li><i class="icon_check_alt" aria-hidden="true"></i><a href="/checkout"><span>{{ 'header.custom_link_checkout' | t }}</span></a></li>
                    <li>
                      <a href="/account/logout">{{ 'header.custom_link_logout' | t }}</a>
                    </li>
                    <li>
                      <a href="/account">{{ 'header.custom_link_account' | t }}</a>
                    </li>
                  </ul>
                  {% else %}
                  <ul class="customer-links">
                    {% if settings.enable_wishlist %}
                    <li class="wishlist-menu">
                      <i class="icon_heart" aria-hidden="true"></i>
                      <a href="/pages/wish-list" title="My Wishlist">{{ 'header.custom_link_wishlist' | t }}</a>
                    </li>
                    {% endif %}
                    <li><i class="icon_check_alt" aria-hidden="true"></i><a href="/checkout"><span>{{ 'header.custom_link_checkout' | t }}</span></a></li>
                    <li><i class="icon_lock-open" aria-hidden="true"></i>

                      <a href="/account/login">{{ 'header.custom_link_login' | t }}</a>
                    </li>
                    <li><i class="icon_profile" aria-hidden="true"></i>
                      {% if shop.customer_accounts_optional %}
                      <a href="/account/register">{{ 'header.custom_link_create_account' | t }}</a>
                      {% endif %}
                    </li>
                  </ul>
                  {% endif %}
                </div>
              </div>
            </div>
            {% endif %}
            {% if section.settings.show_header_compare %}
            <div class="compare-target">     
              <a href="javascript:;" class="num-items-in-compare show-compare" title="compare">
                <i class="cs-font clever-icon-law-1"></i>
                <span class="compare-icon"><span class="number">0</span></span>
              </a>
            </div>
            {% endif %}
            {% if section.settings.show_header_wishlist %}
            <div class="wishlist-header">
              <a href="/pages/wish-list" title="My Wishlist"><i class="cs-font clever-icon-heart-4" aria-hidden="true"></i></a>
            </div>
            {% endif %}
            {% if section.settings.show_header_cart %}
            <div class="header-cart">
              <!--%include 'customer_links' %-->
              <div class="top-cart-wr">
                <div class="top-cart">
                  <a href="#" class="cartToggle"> 
<!--                    <a href="/cart" class=""> -->
                    <i class="cs-font {{ section.settings.header_icon_cart }}">
                      {% if section.settings.header_icon_carttype == 'cart_type_1' %}
                      <span class="cart-count">{{ cart.item_count }}</span>
                      {% endif %}
                    </i>
                    {% if section.settings.header_icon_carttype == 'cart_type_2' %}
                    <div class="minicart-wr">
                      <span class="cart-count"> Cart ({{ cart.item_count }})</span>
                    </div>
                    {% endif %}
                  </a> 
                </div>

                {% comment %}
                If customer accounts are enabled, provide login and create account links
                {% endcomment %}
              </div> <!-- End Top Header --> 
            </div>
            {% endif %}
          </div>
        </div>
        {% unless section.settings.enable_header_fullwidth %}
      </div>
      {% endunless  %}
    </div>
  </div>
  <div id="header-bottom">
    <div class="header header-bot{% if  section.settings.enable_header_fullwidth  %} full-width{%endif %}">
      {% unless section.settings.enable_header_fullwidth %}
      <div class="container">
        {% endunless  %}
        <div class="header-inner">
          <div class="row">
            <div class="menu-main-home menu col-12">
              <div class="menu-top">
                <div class="menu-action">{% include 'site-nav' %}</div>
              
                <div class="rewards-btn"><a href="/pages/rewards">Rewards</a></div>

                
              </div>
            </div>
          </div>
        </div>
      </div>
      {% unless section.settings.enable_header_fullwidth %}
    </div>
    {% endunless  %}
  </div>
</div>

<style>
   .menu-top .menu-action {
    width: auto;
    float: left;
	}
  .rewards-btn a {
    width: auto;
    float: right;
    color: #000;
    background:#ffccd9;
    line-height: 35px;
    border: 1px solid #ffccd9;
    padding: 0px 40px;
    margin: 8px 0px 0px 0px;
	}
   .rewards-btn a:hover {
     background:initial;
     color:#fff;
     border:1px solid #fff;
   }
</style>