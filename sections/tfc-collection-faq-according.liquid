{%- comment -%}

    Collection Metafields specs
    ===============
        For titles = faq_titles.title_{number}
        For content = faq_contents.content_{number}

    Examples: 
        - faq_titles.title_1
        - faq_contents.content_1

        - faq_titles.title_2
        - faq_contents.content_2

{%- endcomment -%}

{%- if section.settings.section_enabled -%}

    {% if collection.metafields.faq_titles.size > 0  %}
    
    <div class="row collection-faq-accordion-container {{ section.settings.section_class }}">
        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 text-center title">
        <h2>{{ section.settings.section_title }}</h2>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
        <div id="product-faq-accordion">
            {% for title in collection.metafields.faq_titles %}

            {% assign index = forloop.index %} 
            {% assign titleIndex = 'title_' | append: index %}
            {% assign contentIndex = 'content_' | append: index %}  

            <h3>{{ collection.metafields.faq_titles[titleIndex] }}</h3>
            <div>{{ collection.metafields.faq_contents[contentIndex] }}</div>
            
            {% endfor %}
        </div>
        </div> <!-- .col -->

        <div class="col-xs-12 col-sm-12 col-md-1 col-lg-1">
        </div>
    </div> <!-- .row -->

    {% endif %}

{%- endif -%} 



{% schema %}
  {
    "name": "TFC Collection FAQ",
    "settings": [
      {
        "type": "header",
        "content": "Show Section"
      },
      {
        "id": "section_enabled",
        "type": "checkbox",
        "label": "Enable"
      },
      {
        "type": "header",
        "content": "Global Settings"
      },
      {
        "id": "section_class",
        "type": "text",
        "label": "CSS class"
      },
  
      {
        "id": "section_title",
        "type": "text",
        "label": "Section Title"
      }
  	]
}
{% endschema %}


